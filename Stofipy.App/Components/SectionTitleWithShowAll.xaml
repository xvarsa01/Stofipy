<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stofipy.App.Components.SectionTitleWithShowAll"
             x:Name="Root">
    
    <Grid ColumnDefinitions="auto, *, auto">
        <Label Grid.Column="0"
               Text="{Binding Source={x:Reference Root}, Path=TitleText}"
               Style="{StaticResource SectionTitleLink}" >
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding Source={x:Reference Root}, Path=ShowAllCommand}" />
            </Label.GestureRecognizers>
        </Label>

        <Label Grid.Column="2"
               Text="{Binding Source={x:Reference Root}, Path=RightText}"
               Style="{StaticResource ShowAllLink}">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding Source={x:Reference Root}, Path=ShowAllCommand}" />
            </Label.GestureRecognizers>
        </Label>
    </Grid>
</ContentView>