<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Stofipy.App.Components.Buttons"
             x:Class="Stofipy.App.Components.Buttons.Queue_RecentlyPlayed">
    
    <Button
        Text="{Binding Text, Source={RelativeSource AncestorType={x:Type local:Queue_RecentlyPlayed}}}"
        Command="{Binding TapCommand, Source={RelativeSource AncestorType={x:Type local:Queue_RecentlyPlayed}}}"
        FontFamily="Circular"
        FontSize="16"
        Style="{StaticResource HoverableButtonStyle}">
        <Button.Triggers>
            <DataTrigger
                TargetType="Button"
                Binding="{Binding IsPressed, Source={RelativeSource AncestorType={x:Type local:Queue_RecentlyPlayed}}}"
                Value="true">
                <Setter Property="TextColor" Value="{StaticResource TextWhite}"/>
            </DataTrigger>
        </Button.Triggers>
    </Button>
    
</ContentView>