<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Stofipy.App.Components.Buttons"
             x:Class="Stofipy.App.Components.Buttons.HomepageRounded"
             x:DataType="local:HomepageRounded"
             x:Name="Root">
    
    <Button Text="{Binding Text, Source={x:Reference Root}}"
            Command="{Binding Source={x:Reference Root}, Path=TapCommand}"
            CommandParameter="{Binding Source={x:Reference Root}, Path=CommandParameter}"
            Style="{StaticResource HomepageRounded}" >
        <Button.Triggers>
            <DataTrigger TargetType="Button" Binding="{Binding Source={x:Reference Root}, Path=Selected}" Value="true">
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="TextColor" Value="{StaticResource PagesBg}" />
            </DataTrigger>
        </Button.Triggers>
    </Button>
</ContentView>