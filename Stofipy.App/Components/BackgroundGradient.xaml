<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stofipy.App.Components.BackgroundGradient"
             x:Name="Root">
    <Grid HeightRequest="400" VerticalOptions="Start">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0, 1">
                <GradientStop Color="{Binding Average , Source={x:Reference Root}}" Offset="0.0"/>
                <GradientStop Color="{StaticResource PagesBg}" Offset="0.9"/>   
            </LinearGradientBrush>
        </Grid.Background>
    </Grid>
</ContentView>