<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stofipy.App.Components.HomePageTitleWithLink"
             x:Name="Root">
    
    <Grid ColumnDefinitions="*, auto">
        <Label Text="{Binding Source={x:Reference Root}, Path=TitleText}"
               Grid.Column="0"
               VerticalOptions="Start"
               Style="{StaticResource TitleMid}" />

        <Label Text="Show all"
               Grid.Column="1"
               VerticalOptions="End"
               Style="{StaticResource ShowAllLink}">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding Source={x:Reference Root}, Path=ShowAllCommand}" />
            </Label.GestureRecognizers>
        </Label>
    </Grid>
</ContentView>