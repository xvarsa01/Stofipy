<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Stofipy.App.Components"
             x:Class="Stofipy.App.Components.QueueHighlightedDropArea">
    
    <Border Style="{StaticResource TransparentBorderThickness0}"
            HeightRequest="5">
        <Border.Triggers>
            <DataTrigger TargetType="Border"
                         Binding="{Binding Highlighted, Source={RelativeSource AncestorType={x:Type local:QueueHighlightedDropArea}}}"
                         Value="true">
                <Setter Property="BackgroundColor" Value="Green" />
            </DataTrigger>
        </Border.Triggers>
    </Border>
</ContentView>