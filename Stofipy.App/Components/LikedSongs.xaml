<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stofipy.App.Components.LikedSongs"
             x:Name="Root">
    
    <Border
        StrokeShape="RoundRectangle 10"
        StrokeThickness="0"
        BackgroundColor="Transparent"
        Padding="0">
                    
        <Border.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding Source={x:Reference Root}, Path=TapCommand}"
                                  CommandParameter="{Binding Source={x:Reference Root}, Path=CommandParameter}" />
        </Border.GestureRecognizers>
        
        <HorizontalStackLayout
              Spacing="10"
              Padding="5">
            <Grid>
                <Border
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 100">
                        <Image 
                            Source="{Binding Source={x:Reference Root}, Path=Picture}"
                            Aspect="AspectFill"
                            HeightRequest="100"
                        />
                </Border>
                <Image
                    Source="liked_song.png"
                    Aspect="AspectFill"
                    HeightRequest="30"
                    VerticalOptions="End"
                    HorizontalOptions="End"
                />
            </Grid>
            <Grid
                RowDefinitions="*, *">
                <Label
                    Grid.Row="0"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    Text="{Binding Source={x:Reference Root}, Path=TopText}"
                    TextColor="White"
                    FontSize="15"/>
                <Label
                    Grid.Row="1"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    Text="{Binding Source={x:Reference Root}, Path=BottomText, StringFormat='{} By: {0}'}"
                    TextColor="White"
                    FontSize="13"/>
            </Grid>
        </HorizontalStackLayout>
    </Border>
</ContentView>