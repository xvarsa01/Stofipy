<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Stofipy.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Stofipy.App"
    xmlns:views="clr-namespace:Stofipy.App.Views"
    xmlns:mainPages="clr-namespace:Stofipy.App.Views.MainPages"
    Shell.FlyoutBehavior="Flyout"
    Title="Stofipy.App">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainLayout}"
        Route="MainPage" />
    
    <ShellContent
        Title="Playlist"
        ContentTemplate="{DataTemplate mainPages:PlaylistDetailWrapperPage}"
        Route="playlist" />

</Shell>
