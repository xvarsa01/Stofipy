             x:Class="Stofipy.App.Views.SectionTop">
    <!-- Top bar with searchbar and profile icon -->
    <Grid 
        ColumnDefinitions="auto, *, auto">
        <Button
            Grid.Column="0"
            Text="navigation">
                
