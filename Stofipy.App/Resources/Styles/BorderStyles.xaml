<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <Style TargetType="Border" x:Key="TransparentBorderThickness0">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="VerticalOptions" Value="Start"/>
    </Style>
    
    <Style TargetType="Border" x:Key="RoundedComponent" BasedOn="{StaticResource TransparentBorderThickness0}">
        <Setter Property="StrokeShape" Value="RoundRectangle 10"/>
    </Style>
    
    <Style TargetType="Border" x:Key="PageBorder" BasedOn="{StaticResource RoundedComponent}">
        <Setter Property="VerticalOptions" Value="Fill"/>
    </Style>
    
    <Style TargetType="Border" x:Key="SpChip" BasedOn="{StaticResource TransparentBorderThickness0}">
        <Setter Property="StrokeShape" Value="RoundRectangle 15"/>
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonBgSemiTransparent}" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Padding" Value="12, 0" />
        <Setter Property="MinimumHeightRequest" Value="30" />
    </Style>
    
</ResourceDictionary>